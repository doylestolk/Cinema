CREATE TABLE hall (
	seatID TINYINT UNSIGNED NOT NULL AUTO_INCREMENT,
	status int,
	PRIMARY KEY (seatID)
);

CREATE TABLE userauth (
	userID TINYINT UNSIGNED NOT NULL AUTO_INCREMENT,
	username VARCHAR(16) NOT NULL,
	password VARCHAR(32) NOT NULL,
	PRIMARY KEY(userID)
);

CREATE TABLE reservation (
	userID TINYINT UNSIGNED NOT NULL,
	seatID TINYINT UNSIGNED NOT NULL,
	FOREIGN KEY (userID) REFERENCES userauth(userID),
	FOREIGN KEY (seatID) REFERENCES seats(seatID)
);